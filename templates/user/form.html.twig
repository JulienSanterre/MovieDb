{% extends 'base.html.twig' %}

{% block title %}Modification des privilèges{% endblock %}

{% block body %}
    <div class="container col-12">
        <div class="row col-12">
            {{ form_start(form, { attr: { class: 'log-form col-4'}}) }}

                <label for="inputUsername">Utilisateur</label>
                {{ form_widget(form.username, { attr: {
                    
                    autofocus: true,
                    id: "inputUsername",
                    class: "form-control"
                }}) }}

                <label for="inputPassword">Séléction des privilèges</label>
                {{ form_widget(form.roles, { attr: {
                    autofocus: true,
                    id: "inputRoles",
                    class: "form-check-input"
                }}) }}

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
                {{ form_widget(form.send, { attr: {
                    class: "btn btn-lg btn-dark log-form-btn col-12"
                }}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}