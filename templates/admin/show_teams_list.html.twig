{% extends 'base.html.twig' %}

{% block title %}Equipes -
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container col-12">
        <div class="row margin-top-phone">
            <div class="col-12">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Titre du film</th>
                            <th scope="col">Métier</th>
                            <th scope="col">Personnalitée</th>
                            {% if is_granted("ROLE_ADMIN") %}
                            <th scope="col">Edition</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for team in teams %}
                            <tr>
                                <th scope="row">
                                    <a href="{{ path('team_show', {'id': team.id}) }}">
                                        {{ team.id }}
                                    </a>
                                </th>
                                <td>
                                    <a href="{{ path('movie_show', {'id': team.movie.id}) }}">
                                        {{ team.movie.title }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('job_show', {'id': team.job.id}) }}">
                                        {{ team.job.name }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('person_show', {'apiId': team.person.apiId}) }}">
                                        {{ team.person.name }}
                                    </a>
                                </td>
                                {% if is_granted("ROLE_ADMIN") %}
                                <td>
                                    <a href="{{ path('team_edit', {'id': team.id}) }}">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                    <a href="{{ path('team_deleteId', {'id': team.id}) }}">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    </a>
                                </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}