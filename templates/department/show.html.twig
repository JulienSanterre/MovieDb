{% extends 'base.html.twig' %}

{% block title %}Equipe : {{ department.name }}{% endblock %}

{% block body %}
    <div class="container col-12">
        <div class="row margin-top-phone">
            <div class="col-12">
                <table class="table table-dark ">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Date de création</th>
                            <th scope="col">Dernière modification</th>
                            {% if is_granted("ROLE_ADMIN") %}
                            <th scope="col">Edition</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">
                                <a href="{{ path('department_show', { 'id': department.id }) }}">
                                    <div class="card-text">
                                        <h5>{{ department.id }}</h5>
                                    </div>
                                </a>
                            </th>
                            <td>{{ department.createdAt|date('d/m/Y') }}</td>
                            <td>{{ department.updatedAt|date('d/m/Y') }}</td>
                            {% if is_granted("ROLE_ADMIN") %}
                            <td>
                                <a href="{{ path('department_edit', {'id': department.id}) }}">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                                <a href="{{ path('department_deleteId', {'id': department.id}) }}">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                </a>
                            </td>
                            {% endif %}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('department_list_show') }}" class="previous-link col-12 text-center">Liste des équipes</a>
{% endblock %}
