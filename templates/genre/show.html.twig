{% extends 'base.html.twig' %}

{% block title %}Genre :
    {{ genre.name }}
{% endblock %}

{% block body %}
    <div class="container col-12 text-center">
        <div class="row margin-top-phone">
            <div class="col-12">

                <table class="table table-dark space-between">
                    <thead>
                        <tr>
                            <th scope="col">Titre Du film
                                <i class="fa fa-film"></i>
                            </th>
                            {% if is_granted("ROLE_ADMIN") %}
                            <th scope="col">
                                Edition
                            </th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for movie in genre.movies %}
                            <tr>
                                <th scope="row">
                                    <a href="{{ path('movie_show', { 'id': movie.id }) }}">
                                        <div class="card-text">
                                            <h5>{{ movie.title }}</h5>
                                        </div>
                                    </a>
                                </th>
                                {% if is_granted("ROLE_ADMIN") %}
                                <td>
                                    <a href="{{ path('movie_edit', {'id': movie.id}) }}">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                    <a href="{{ path('movie_deleteId', {'id': movie.id}) }}">
                                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    </a>
                                </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <a href="{{ path('genre_list_show') }}" class="previous-link col-12 text-center">Liste des genres</a>
{% endblock %}
